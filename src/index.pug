  <main class="about sm:grid-cols-2 grid container m-auto h-full">
    div(class="grid grid-rows-3")
      <div class="text-left flex items-center justify-center">
        <div class="text-center">
          <p class="about__greeting">Hi,</p>
          <p>I am</p>
        </div>
      </div>

      <div class="text-center flex flex-col items-center justify-center">
        <div class="text-center">
          <h1 class="about__name">#{seo_title}</h1>
          <h2 class="about__occupation font-thin">Software Developer</h2>
        </div>
      </div>

      <div class="h-full w-full flex justify-around items-center">
        each item in [{ title: 'LinkedIn', label: 'LinkedIn profile', icon: '#linkedIn', href: 'https://www.linkedin.com/in/dalvarezvera' },{ title: 'Twitter', label: 'Twitter profile', icon: '#twitter', href: 'https://twitter.com/tsuginodan' },{ title: 'Github', label: 'Github profile', icon: '#github', href: 'https://github.com/akaisuicchi' },{ title: 'CV', label: 'CV file', icon: '#pdf', href: 'https://public.dalvarez.dev/cv_2.pdf' }]
          <div class="lg:w-16 lg:h-16 xl:w-20 xl:h-20 h-12 w-12 rounded-full">
            a(title=item.title aria-label=item.label href=`${item.href}` target="_blank" rel="noreferrer noopener" class="w-full h-full flex items-center justify-center")
              <div class="w-full h-full">
                <svg class="w-full h-full">
                  title #{item.label} icon
                  use(href=`${item.icon}`)
                </svg>
              </div>
            </a>
          </div>
      </div>

    <div class="hidden flex-1 relative sm:flex flex-col items-center justify-center">
      <div class="z-10 opacity-50 absolute w-64 h-64 rounded-full bg-gradient-to-t from-blue-500 to-purple-500"></div>
      picture(class="absolute")
        source(srcset="https://public.dalvarez.dev/portfolio-profile_4_256.webp" type="image/webp")
        <img class="w-64 h-64 object-cover rounded-full" loading="lazy" src="https://public.dalvarez.dev/portfolio-profile_4_256.jpeg" alt="#{seo_title} profile photo">
    </div>
  </main>
</body>

</html>